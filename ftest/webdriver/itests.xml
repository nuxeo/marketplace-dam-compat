<project name="nuxeo-dam-compat-tests"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />
  <taskdef resource="net/sf/antcontrib/antlib.xml" />

  <property name="out.dir" value="${maven.project.build.directory}" />
  <unzip dest="${out.dir}/" overwrite="false">
    <artifact:resolveFile key="org.nuxeo:nuxeo-ftest::zip" />
  </unzip>
  <import file="${out.dir}/nuxeo-ftest.xml" />

  <property name="mp.install"
            value="init,${out.dir}/marketplace-${maven.project.version}.zip" />
  <target name="prepare-environment"
          depends="_init,prepare-db,prepare-tomcat,prepare-jboss">
    <copy todir="${out.dir}">
      <artifact:resolveFile key="org.nuxeo.marketplace.dam.compat:marketplace::zip" />
    </copy>
    <antcall target="set-conf">
      <param name="name" value="org.nuxeo.connect.url" />
      <param name="value" value="https://connect-test.nuxeo.com/nuxeo/site/" />
    </antcall>
  </target>

</project>
